{
  "name": "osp-houserules",
  "version": "1.0.0",
  "type": "module",
  "description": "OSP House Rules Game System",
  "scripts": {
    "build:css": "node ./scripts/build-css.js",
    "build:js": "rollup -c",
    "build:prod": "npm run build:css && npm run build:js && node ./scripts/strip-diagnostics.cjs",
    "build": "npm run build:css && npm run build:js",
    "watch": "rollup -c -w",
    "test-upgrades": "node ./scripts/test-upgrade.js"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "glob": "^11.0.3",
    "rollup": "^4.49.0",
    "rollup-plugin-typescript2": "^0.36.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "dompurify": "^2.4.0",
    "sass": "^1.91.0"
  }
}
